<?xml version="1.0" encoding="UTF-8"?>

<cxViewRoot cxView.fill="0,0,0,0">
    <cxSprite cxView.w="300" cxView.h="300" cxSprite.texture="4.pvr"/>
    <cxButton cxView.w = "180" cxView.h = "120" cxView.right="10" cxView.bottom="10" cxButton.onRelease="cxPopView">
        <cxAtlas cxView.fill="0,0,0,0" cxAtlas.scale9="50,50,50,50" cxSprite.texture="scale9.png" />
        <cxLabelTTF cxView.color="0,0,0" cxLabelTTF.font="banana.ttf" cxLabelTTF.text="Return" cxLabelTTF.size="30"/>
    </cxButton>
    <cxClipping cxView.w="300" cxView.h="300" cxClipping.inverse="true">
        <cxSprite cxView.w="300" cxView.h="300" cxSprite.texture="2.pvr" cxView.onEnter="cxActionRun({'src':'actions.xml?rotate'})" />
    </cxClipping>
    <cxSprite cxView.y="300" cxView.w="300" cxView.h="300" cxSprite.texture="4.pvr"/>
    <cxClipping cxView.y="300" cxView.w="300" cxView.h="300"  cxClipping.inverse="true">
        <cxSprite cxView.w="300" cxView.h="300" cxSprite.texture="2.pvr" cxView.onEnter="cxActionRun({'src':'actions.xml?rotate'})" />
        <cxClipping cxView.w="100" cxView.h="100" cxClipping.inverse="true">
            <cxSprite cxView.w="100" cxView.h="100" cxSprite.texture="2.pvr" cxView.onEnter="cxActionRun({'src':'actions.xml?rotate'})" />
        </cxClipping>
    </cxClipping>
</cxViewRoot>

