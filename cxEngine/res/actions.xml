<?xml version="1.0" encoding="UTF-8"?>

<cxActionSet cxActionSet.type="multiple" cxActionSet.onLoad="actionsLoad">
    <cxAnimate id="animate"
        cxAction.speed="1.0"
        cxAction.time="3">
        <cxFrame file="animate/%d.png" from="1" to="40"/>
    </cxAnimate>
    <cxAnimate id="animate2"
        cxAction.time="5">
        <cxFrame file="candy.xml?red.png" cache="true"/>
        <cxFrame file="candy.xml?green.png" cache="true"/>
        <cxFrame file="candy.xml?blue.png" cache="true"/>
        <cxFrame file="candy.xml?orange.png" cache="true"/>
        <cxFrame file="candy.xml?yellow.png" cache="true"/>
    </cxAnimate>
    <cxMove id="move"
        cxAction.speed="1.0"
        cxAction.time="1.5"
        cxMove.x="300"
        cxMove.y="350"
        cxAction.assist="50"
        cxAction.split="10"
        cxAction.curve="ElasticOut"/>
    <cxMove id="reset"
        cxAction.speed="1.0"
        cxAction.time="1.5"
        cxMove.x="-300"
        cxMove.y="350"
        cxAction.assist="10"
        cxAction.curve="ElasticOut"/>
    <cxRotate id="rotate"
        cxAction.speed="1.0"
        cxAction.time="3.0"
        cxRotate.z="360"
        cxAction.curve="CubeIn"/>
    <cxScale id="btnEnter"
        cxAction.id="100"
        cxAction.speed="1.0"
        cxAction.time="0.1"
        cxScale.x="0.85"
        cxScale.y="0.85"/>
    <cxScale id="btnLeave"
        cxAction.id="100"
        cxAction.speed="1.0"
        cxAction.time="0.1"
        cxScale.x="1.0"
        cxScale.y="1.0"/>
    <cxJump id="jump"
        cxAction.time="5"
        cxJump.position="300,0"
        cxJump.jumps="8"
        cxJump.height="100"/>
    <cxFade id="fade1"
        cxAction.time="3"
        cxFade.alpha="0"/>
    <cxFade id="fade2"
        cxAction.time="3"
        cxFade.alpha="1"/>
    <cxTint id="tint1"
        cxAction.time="0.1"
        cxTint.color="1.3,1.3,1.3,1.3"
        cxAction.onStop="cxActionRun({'src':'actions.xml?tint2'})"/>
    <cxTint id="tint2"
        cxAction.time="0.1"
        cxTint.color="1,1,1,1"/>
    <cxTimer id="timer"
        cxAction.time="2"
        cxTimer.repeat="5"
        cxTimer.onArrive="cxLogger('timer')" />
</cxActionSet>
